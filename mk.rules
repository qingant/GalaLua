# -*- Makefile -*-
CLANG_EXIST   =  $(shell which clang++ 2>/dev/null)
GCC_EXIST     =  $(shell which g++ 2>/dev/null)
PLATFORM      =  $(shell uname)
clang =
CMPFLAG_ = $(CMPFLAG)

#@echo $CMPFLAG
ifeq ($(PLATFORM),Linux)
include ../gcc.rules
ifneq ($(CLANG_EXIST), )
clang = yes
endif
#gcc.rules
endif

ifeq ($(PLATFORM),AIX)
include ../xlc.rules
endif

ifeq ($(PLATFORM),Darwin)
ifneq ($(CLANG_EXIST), )
clang = yes
CMPFLAG_ = $(CMPFLAG) -D_DARWIN_C_SOURCE -D__FreeBSD__
endif
endif

ifdef clang
include ../clang.rules
endif

.cpp.o:
	$(G++) $(CMPFLAG_) -o $@ $<

.c.o:
	$(GCC) $(CMPFLAG_) -o $@ $<


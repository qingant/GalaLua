# -*- Makefile -*-
G++			= xlc++_r
GCC			= xlc_r
COMMINC		=  -I. -I../lua-5.1.5/src/
LNKFLAG 	= -qmkshrobj -q64
ARFLAG      = -X64
COMPWARN    = #-qhalt=i -qwarn64 -qinfo=all
CMPFLAG 	= -c -g -q64 -qcpluscmt -D_UNIX95_ -D_DEBUG_ -D_THREAD_SAFE -D__IBMCPP_TR1__ $(COMPWARN) $(COMMINC)  -D_ALL_SOURCE #-qinclude=config.h -D_BSD=44
PLIBDIR		= -lGalaxyStub  -L$(HOME)/lib/ -L$(HOME)/lua5.1.5/lib
STUBLIB		= -lGalaxyStub
SYTMLIB 	= -q64 -brtl -brtllib -lz -lc -lm -ldl -lpthread -liconv -lrt $(PLIBDIR) -L/usr/local/lib/ -lbsd -lC_r -ls
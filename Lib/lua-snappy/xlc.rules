# -*- Makefile -*-
G++			= xlc++_r
GCC			= xlc_r
COMMINC		=  -I. -I../../lua-5.1.5/src -I../../LuaJIT-2.0.0/src
LNKFLAG 	   = -qmkshrobj -q64 -bM:SRE -bnoentry -brtl -brtllib -berok
COMPWARN    = #-qhalt=i -qwarn64 -qinfo=all
CMPFLAG 	   = -c -g -q64 -qcpluscmt -D_UNIX95_ -D_DEBUG_ -D_THREAD_SAFE -D__IBMCPP_TR1__ $(COMPWARN) $(COMMINC)  -D_ALL_SOURCE
PLIBDIR     = $(HOME)/lib
SYTMLIB 	   = -brtl -brtllib

AR          = ar
ARFLAGS     = -X64 -rcu
RANLIB      = ranlib
RANLIBFLAGS = -X64


# -*- Makefile -*-
G++         = xlc++_r
GCC         = xlc_r
COMMINC     = -I. -I$(HOME)/luajit/include
LNKFLAG     = -qmkshrobj -q64 -bM:SRE -bnoentry -brtl -brtllib -berok
COMPWARN    = # -qhalt=i -qwarn64 -qinfo=all
CMPFLAG     = -c -g -q64 -qcpluscmt -D_UNIX95_ -D_THREAD_SAFE \
              -D__IBMCPP_TR1__ $(COMPWARN) $(COMMINC) -D_ALL_SOURCE \
              -D__NOLOCK_ON_INPUT -D__NOLOCK_ON_OUTPUT -qrtti=type
SYTMLIB     = -q64 -brtl -brtllib -berok -lz -lc -lm -ldl -lpthread \
              -lrt -lbsd -ls
PLIBDIR     = -L$(HOME)/lib -L$(HOME)/luajit/lib

AR          = ar
ARFLAGS     = -X64 -rcu
RANLIB      = ranlib
RANLIBFLAGS = -X64


# -*- Makefile -*-
CLANG_EXIST   =  $(shell which clang++)
GCC_EXIST     =  $(shell which g++)
PLATFORM      =  $(shell uname)
clang =
CMPFLAG_ = $(CMPFLAG)

#@echo $CMPFLAG
ifeq ($(PLATFORM),Linux)
include ./gcc.rules
endif

ifeq ($(PLATFORM),AIX)
include ./xlc.rules
endif

.cpp.o:
	$(G++) $(CMPFLAG_) -o $@ $<

.c.o:
	$(GCC) $(CMPFLAG_) -o $@ $<


# Installation directories
# System's libraries directory (where binary libraries are installed)
LUA_LIBDIR= $(HOME)/lib/lib/lua/5.1/
# System's lua directory (where Lua libraries are installed)
LUA_DIR= $(HOME)/lib/share/lua/5.1/
# Lua includes directory
LUA_INC= $(HOME)/lib/include/luajit-2.0
# Zziplib includes directory
ZZLIB_INC= $(HOME)/lib/include
# Zziplib libraries directory
ZZLIB_LIBDIR=$(HOME)/lib/lib

# OS dependent
LIB_OPTION= -shared #for Linux
#LIB_OPTION= -bundle -undefined dynamic_lookup #for MacOS X

# Lua version number (first and second digits of target version)
LUA_VERSION_NUM= 510
LIBNAME= $T.so.$V
COMPAT_DIR= ../compat/src

# Compilation directives
WARN= -O2 -Wall -fPIC -W -Waggregate-return -Wcast-align -Wmissing-prototypes -Wnested-externs -Wshadow -Wwrite-strings
INCS= -I$(LUA_INC) -I$(ZZLIB_INC) -I$(COMPAT_DIR)
CFLAGS= $(WARN) $(INCS)
CC= gcc

